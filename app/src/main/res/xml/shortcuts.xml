<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="Deeplink"
        android:enabled="true"
        android:icon="@drawable/ic_launcher_background"
        android:shortcutShortLabel="@string/Label"
        android:shortcutLongLabel="@string/Long_Label"
        android:shortcutDisabledMessage="@string/DisableMessage"
        >
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.example.deeplinkapp"
            android:targetClass="com.example.deeplinkapp.MainActivity" />
       
        <categories android:name="android.shortcut.conversation" />
        <capability-binding android:key="actions.intent.CREATE_MESSAGE" />
    </shortcut>

</shortcuts>